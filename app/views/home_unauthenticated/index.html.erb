<div class="home unauthorized">
  <div class="row title">
    <div class="col-lg-10 col-lg-offset-1">
      <h1>
        Search the Federal Register for legislation and announcements that affect you.
      </h1>
      <h3><%= link_to("Create an account", signup_url) %> to save and track your federal register articles</h3>
    </div>
  </div>

  <div class="row naics-search">
    <div class="col-lg-4 col-lg-offset-4">
      <%= form_for @search, url: 'documents', remote: true do |f| %>
        <div class="row">
          <div class="col-lg-12">
            <div class="input-group">

              <%= f.text_field(:term, class: 'form-control') %>
              <span class="input-group-btn">
                <%= f.submit("Go!", class: "btn btn-default js-search") %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row naics-results">
    <div class="col-lg-10 col-lg-offset-1">
      <%= image_tag("loading.gif", class: "loader") %>
      <div class="content"></div>
    </div>
  </div>
</div>
